<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nimaz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.Nimaz">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
</resources>